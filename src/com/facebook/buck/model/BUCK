BUILD_ID_SRCS = [ 'BuildId.java' ]
java_library(
  name = 'build_id',
  srcs = BUILD_ID_SRCS,
  autodeps = True,
  visibility = ['PUBLIC'],
)

MACRO_SRCS = [
  'AbstractMacroMatchResult.java',
  'MacroFinder.java',
  'MacroReplacer.java',
  'MacroException.java',
]
SIMPLE_TYPES_SRCS = [
  'Either.java',
  'Pair.java',
]
java_immutables_library(
  name = 'macros',
  immutable_types = [
    'MacroMatchResult',
  ],
  srcs = MACRO_SRCS,
  autodeps = True,
  visibility = ['PUBLIC'],
)

java_library(
  name = 'simple_types',
  srcs = SIMPLE_TYPES_SRCS,
  autodeps = True,
  visibility = ['PUBLIC'],
)

java_immutables_library(
  name = 'model',
  srcs = glob(['*.java'], excludes = BUILD_ID_SRCS + MACRO_SRCS + SIMPLE_TYPES_SRCS),
  immutable_types = [
    'BuildTarget',
    'UnflavoredBuildTarget',
  ],
  tests = [
    '//test/com/facebook/buck/model:model',
  ],
  autodeps = True,
  visibility = ['PUBLIC'],
)
